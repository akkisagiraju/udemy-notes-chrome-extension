{
  "manifest_version": 2,
  "name": "YouTube Notes",
  "description": "Take notes while watching YouTube videos",
  "version": "0.1",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": [
        "https://youtube.com/watch?v=*",
        "https://www.youtube.com/watch?v=*"
      ],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Notes"
  }
}
