{
  "manifest_version": 2,
  "name": "Open Notes",
  "description": "Take notes and share them with the world.",
  "version": "0.1",
  "permissions": ["activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://udemy.com/*", "https://www.udemy.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open Notes"
  }
}
